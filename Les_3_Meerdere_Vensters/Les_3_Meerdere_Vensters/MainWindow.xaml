<Window x:Class="Les_3_Meerdere_Vensters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Les_3_Meerdere_Vensters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <Button Name="BtnOpenExtraVenster"
                    Margin="100 20"
                    Content="Voeg een venster toe"
                    Click="BtnOpenExtraVenster_Click" />
            <Button Name="BtnHideAll"
                    Margin="100 20"
                    Content="Sluit alle vensters"
                    Click="BtnHideAll_Click" />
            <Button Name="BtnShowAll"
                    Margin="100 20"
                    Content="Laat alle vensters zien"
                    Click="BtnShowAll_Click" />
        </StackPanel>
        
    </Grid>
</Window>

<Window x:Class="Oefening_Login_Secrets.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oefening_Login_Secrets"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <StackPanel>
        <TextBlock Text="Username:" Margin="20 10"/>
        <TextBox Name="TxtUsername" Margin="20 10"/>
        <TextBlock Text="Password:" Margin="20 10"/>
        <PasswordBox Name="TxtPassword"
                     Margin="20 10"
                     PasswordChar="%"
                     MaxLength="10"/>
        <Button Content="Log In" Name="BtnLogIn" Click="BtnLogIn_Click" Margin="40" />
    </StackPanel>
</Window>
